<div class="boards" ng-class="{'small': smallBoard}">
    <img class="board-1" ng-class="{'small': smallBoard}" ng-src="images/Boards/{{playerColor}}1.png" />
    <img class="board-2" ng-class="{'small': smallBoard}" ng-src="images/Boards/{{playerColor}}2.png" />

    <div ng-repeat="selectedAction in selectedActions" class="selected-action-wrapper selected-action-wrapper-{{$index}}" ng-class="{'cursor': $parent.cursor.index === $index, 'configurable-action': !$parent.immutableCursor && $parent.cursor, 'small': smallBoard}" ng-click="moveCursor($index)">
        <img ng-if="selectedAction.description != null" class="action-selected-image" ng-class="{'small': smallBoard}" ng-src="images/Actions/{{selectedAction.description}}.png" />
        <img ng-if="selectedAction.bonusAction.description != null" class="action-selected-image action-bonus-selected-image" ng-class="{'small': smallBoard}" ng-src="images/Actions/{{selectedAction.bonusAction.description}}.png"/>
    </div>
</div>
