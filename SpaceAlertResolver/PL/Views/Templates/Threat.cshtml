<div class="threat-wrapper" ng-class="{'phased-threat-wrapper': threat.isPhasedOut}">
    <div class="threat-image-wrapper">
        <img id="threat{{trackId}}{{threatIndex}}" class="threat" ng-src="images/Threats/{{threat.fileName}}.png" />
        <div class="threat-text-overlay" ng-if="threat.amountAttackingFor > 0">
            <div>Attack {{threat.amountAttackingFor}}</div>
            <div>{{threat.zoneUnderAttack}}</div>
        </div>
    </div>
    <div class="threat-info">
        <div class="threat-info-col-1">
            <div class="threat-time-appears-wrapper">
                <img class="threat-time-appears" src="images/threatTimeAppears.png"/>
                <div class="threat-time-appears-text">{{threat.timeAppears || '?'}}</div>
            </div>
            <div class="threat-speed-wrapper">
                <img class="threat-speed" src="images/threatSpeed.png"/>
                <div class="threat-speed-text">{{threat.speed}}</div>
            </div>
        </div>
        <div class="threat-info-col-2">
            <div class="threat-health-wrapper">
                <img class="threat-health" src="images/redCube.png"/>
                <div class="threat-health-text">{{threat.remainingHealth}}</div>
            </div>
            <div ng-if="threat.shields" class="threat-shield-wrapper">
                <img class="threat-shield" src="images/greenCube.png"/>
                <div class="threat-shield-text">{{threat.shields}}</div>
            </div>
            <div ng-if="threat.totalInaccessibility" class="threat-total-inaccessibility-wrapper">
                <img class="threat-total-inaccessibility" src="images/greenCube.png"/>
                <div class="threat-total-inaccessibility-text">{{threat.totalInaccessibility}}</div>
            </div>
        </div>
        <div class="threat-info-col-2" ng-if="threat.buffCount || threat.debuffCount || removable">
            <div ng-if="threat.buffCount" class="threat-buff-count-wrapper">
                <img class="threat-buff-count" src="images/whiteCube.png" />
                <div class="threat-buff-count-text">{{threat.buffCount}}</div>
            </div>
            <div ng-if="threat.debuffCount" class="threat-debuff-count-wrapper">
                <img class="threat-debuff-count" src="images/blackCube.png" />
                <div class="threat-debuff-count-text">{{threat.debuffCount}}</div>
            </div>
			<div ng-if="removable" class="remove-threat-action" ng-click="removeThreat()">
				<i class="fa fa-trash-o"></i>
			</div>
        </div>
        
    </div>
</div>
